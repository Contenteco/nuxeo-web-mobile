<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-addons-parent</artifactId>
    <version>5.5.0-HF06-SNAPSHOT</version>
  </parent>
  <groupId>org.nuxeo.ecm.mobile</groupId>
  <artifactId>nuxeo-web-mobile-parent</artifactId>
  <version>5.5.0-HF06-SNAPSHOT</version>
  <name>nuxeo-web-mobile-parent</name>
  <packaging>pom</packaging>
  <description>WebApp exposing Nuxeo with dedicated views for Mobile browsers</description>

  <!-- TODO: move into addons/pom.xml when aligning on 5.6-SNAPSHOT -->
  <properties>
    <nuxeo.web.mobile.version>5.5.0-HF06-SNAPSHOT</nuxeo.web.mobile.version>
  </properties>

  <modules>
    <module>nuxeo-application-definition</module>
    <module>nuxeo-web-mobile</module>
    <module>nuxeo-application-definition-sample</module>
  </modules>

  <!-- TODO: move into addons/pom.xml when aligning on 5.6-SNAPSHOT -->
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.ecm.mobile</groupId>
        <artifactId>nuxeo-application-definition</artifactId>
        <version>${nuxeo.web.mobile.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.mobile</groupId>
        <artifactId>nuxeo-web-mobile</artifactId>
        <version>${nuxeo.web.mobile.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.mobile.sample</groupId>
        <artifactId>nuxeo-application-definition-sample</artifactId>
        <version>${nuxeo.web.mobile.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <repositories>
    <repository>
      <id>public</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>public-snapshot</id>
      <url>http://maven.nuxeo.org/nexus/content/groups/public-snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:git://github.com/nuxeo/nuxeo-web-mobile.git</connection>
    <developerConnection>scm:git:ssh://git@github.com:nuxeo/nuxeo-web-mobile.git</developerConnection>
    <url>https://github.com/nuxeo/nuxeo-web-mobile</url>
  </scm>

</project>
