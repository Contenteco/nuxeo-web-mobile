<?xml version="1.0"?>
<fragment version="1">

  <extension target="web#LISTENER">

  <!-- redirect to navigation choice if type of Navigation not set -->
   <filter>
      <display-name>NavigationSelectionWebMobileFilter</display-name>
      <filter-name>NavigationSelectionWebMobileFilter</filter-name>
      <filter-class>org.nuxeo.ecm.mobile.filter.WebMobileNavigationSelectionFilter</filter-class>
    </filter>

    <filter-mapping>
      <filter-name>NavigationSelectionWebMobileFilter</filter-name>
      <url-pattern>*</url-pattern>
    </filter-mapping>

   <!-- Redirect to Web Mobile Application if Mobile navigation chosen -->
   <filter>
      <display-name>WebMobileFilter</display-name>
      <filter-name>WebMobileFilter</filter-name>
      <filter-class>org.nuxeo.ecm.mobile.filter.WebMobileFilter</filter-class>
    </filter>

    <filter-mapping>
      <filter-name>WebMobileFilter</filter-name>
      <url-pattern>*</url-pattern>
    </filter-mapping>
  </extension>


  <install>
    <unzip from="${bundle.fileName}" to="/" prefix="web">
      <include>web/nuxeo.war/**</include>
    </unzip>
  </install>


</fragment>
